<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="box">
                    <!-- product-description -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-4">
                                <img src="/image/product/<%= product.s_hinh %>" style="width: 400px;" alt="">
                            </div>
                            <div class="col-8">
                                <div class="product-single">
                                    <h2><%= product.s_ten %></h2>
