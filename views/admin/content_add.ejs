<div class="container-fluid" style="width: 80%; padding: 2rem;">
    <form class="row g-3 was-validated" action="/admin/content/insert"  enctype="multipart/form-data" method="post">
        <div class="col-md-8">
          <label for="validationServer02" class="form-label">Tên content(mã ưu đãi)</label>
          <input type="text" class="form-control is-valid" name="ct_name" id="validationServer02" required>
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-12">
            <label class="form-label">hình ảnh 1200x600 px</label>
            <input type="file" accept="image/*,.pdf" class="form-control" name="ct_img"  aria-label="file example" required>
        </div>
        <div class="col-md-12">
            <label for="validationTextarea" class="form-label" >Mô tả</label>
            <textarea class="form-control" id="validationTextarea" name="ct_desc" rows="10" placeholder="..." required></textarea>
        </div>
        <div class="col-12">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="checkbox" >
              <label class="form-check-label" >
                Hiện lên trang Home ngay.
              </label>
            </div>
        </div>
        <div class="col-12">
          <button class="btn btn-primary" type="submit">Tạo</button>
        </div>
      </form>
</div>