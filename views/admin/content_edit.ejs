<div class="container-fluid" style="width: 80%; padding: 2rem;">
    <a href="/admin/list-content" class="btn btn-success mb-2"> <i class="fa-solid fa-arrow-left"></i> &ensp;Quay lại</a>
    <form class="row g-3 was-validated" action="/admin/content/update"  enctype="multipart/form-data" method="post">
        <div class="col-md-4">
                <label for="validationServer01" class="form-label">ID</label>
                <input type="number" for="disabledTextInput" class="form-control" name="ct_id" value="<%= ct.id %>" readonly>
        </div>
        <div class="col-md-8">
          <label for="validationServer02" class="form-label">Tên content</label>
          <input type="text" class="form-control is-valid" id="validationServer02" name="ct_name" value="<%= ct.content_name %>" required>
        </div>
        <div class="col-md-2">
          <img src="/image/content/<%= ct.content_img %>" alt="" width="100px">
        </div>
        <div class="col-md-4">
            <input type="file" accept="image/*,.pdf" class="form-control" name="ct_img" aria-label="file example">
        </div>
        <div class="col-md-12">
            <label for="validationTextarea" class="form-label">Mô tả</label>
            <textarea class="form-control" id="validationTextarea" rows="5" placeholder="..." name="ct_desc" required> <%= ct.content_desc %></textarea>
        </div>
        <div class="col-12">
            <div class="form-check">
              <% if(ct.content_status == 1){%>
                <input class="form-check-input" type="checkbox" name="checkbox" checked>
              <% }else{ %>
                <input class="form-check-input" type="checkbox" name="checkbox">
              <% } %>
              
              <label class="form-check-label" >
                status.
              </label>
            </div>
        </div>
        <div class="col-md-3">
            <label for="validationServer02" class="form-label">thứ tự content</label>
            <input type="number" class="form-control is-valid" id="validationServer02" name="ct_stt" value="<%= ct.content_stt %>" required>
        </div>
        <div class="col-12">
          <button class="btn btn-primary" type="submit" onclick="return confirm('chắc chẵn thay đổi hay không ?')">Lưu</button>
        </div>
      </form>
</div>